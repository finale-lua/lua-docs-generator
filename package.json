    "jest": {
        "collectCoverage": true,
        "testPathIgnorePatterns": [
            "/node_modules/",
            "/js/"
        ],
        "globalSetup": "./test-setup.ts"
    },
    "keywords": [],
    "author": "",
    "license": "MIT",
    "devDependencies": {
        "@babel/core": "^7.13.8",
        "@babel/preset-env": "^7.13.9",
        "@babel/preset-typescript": "^7.13.0",
        "@nick-mazuk/eslint-config": "^0.7.51",
        "@types/fs-extra": "^9.0.10",
        "@types/jest": "^26.0.15",
        "@types/n-readlines": "^1.0.1",
        "@types/node": "^14.14.37",
        "@vercel/ncc": "^0.27.0",
        "babel-jest": "^26.5.2",
        "eslint": "^7.21.0",
        "jest": "^26.6.3",
        "prettier": "^2.2.1",
        "typescript": "^4.2.3"
    },
    "dependencies": {
        "@actions/core": "^1.2.6",
